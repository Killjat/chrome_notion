{
  "name": "user-info-detector",
  "version": "1.0.0",
  "description": "用户信息检测web应用：IP归属地、浏览器指纹、操作系统检测和看板管理",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "deploy": "./deploy.sh",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop user-info-detector",
    "pm2:restart": "pm2 restart user-info-detector",
    "pm2:logs": "pm2 logs user-info-detector"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "axios": "^1.6.0",
    "ua-parser-js": "^1.0.37",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "pm2": "^5.3.0"
  }
}